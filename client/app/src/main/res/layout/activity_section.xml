<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece8e8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableRight="@drawable/turn_left"
                android:textColor="#0cb2e4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/virtual_section"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sp_section"
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="8sp"
            android:text="@string/section"
            android:textColor="#423e3e" />

        <Button
            android:id="@+id/btn_section_my_join"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@color/white"
            android:drawableRight="@drawable/next_page"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:text="@string/myJoin"
            android:textColor="#363839"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_section_my_create"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:layout_marginTop="8sp"
            android:background="@color/white"
            android:drawableRight="@drawable/next_page"
            android:gravity="center_vertical"
            android:paddingLeft="15sp"
            android:text="@string/myCreate"
            android:textColor="#363839"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
