<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ece8e8" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50sp">
            <Button android:textSize="20sp" android:textStyle="bold" android:background="#ece8e8" android:layout_width="0sp" android:layout_height="50sp" android:layout_weight="1" android:onClick="back_to_setting" android:drawableEnd="@drawable/turn_left"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_width="0sp" android:layout_height="50sp" android:text="@string/privacy_policy" android:layout_weight="8"/>
            <TextView android:layout_width="0sp" android:layout_height="50sp" android:layout_weight="1"/>
        </LinearLayout>
        <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="60sp" android:layout_marginTop="8sp" android:text="@string/suggestion_and_feedback" android:drawableRight="@drawable/next_page" android:onClick="go_to_suggestion" android:paddingStart="15sp"/>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="55sp" android:layout_marginTop="10sp" android:paddingStart="15sp">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:layout_width="0sp" android:layout_height="55sp" android:text="@string/local_version" android:layout_weight="8"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/local_version" android:layout_width="0sp" android:layout_height="55sp" android:text="1.0.1" android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="55sp" android:layout_marginTop="1sp" android:paddingStart="15sp">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center_vertical" android:layout_width="0sp" android:layout_height="55sp" android:text="@string/new_local_version" android:layout_weight="8"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/new_local_version" android:layout_width="0sp" android:layout_height="55sp" android:text="1.0.1" android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
