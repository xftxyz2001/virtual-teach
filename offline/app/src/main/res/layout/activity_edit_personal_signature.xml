<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10sp" android:layout_marginTop="20sp" android:layout_marginRight="10sp">
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_width="0sp" android:layout_height="wrap_content" android:text="@string/personal_signature" android:layout_weight="3"/>
            <EditText android:id="@+id/ed_personal_sign" android:layout_width="0sp" android:layout_height="wrap_content" android:hint="请输入您的个性签名" android:layout_weight="7" android:inputType="text"/>
        </LinearLayout>
        <Button android:textSize="20sp" android:textStyle="bold" android:textColor="#e94eb4dc" android:background="@drawable/rounded_rect_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20sp" android:layout_marginTop="15sp" android:layout_marginRight="20sp" android:text="@string/finish_modify" android:onClick="finish_modify"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
