<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#ece8e8" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="50sp">
            <Button android:textSize="20sp" android:textStyle="bold" android:textColor="#0cb2e4" android:background="@color/white" android:layout_width="0sp" android:layout_height="50sp" android:drawableRight="@drawable/turn_left" android:layout_weight="1" android:onClick="back_to_information"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:layout_width="0sp" android:layout_height="50sp" android:text="@string/virtual_teachResearch_section" android:layout_weight="8"/>
            <Spinner android:id="@+id/sp_section" android:layout_width="0sp" android:layout_height="50sp" android:layout_weight="1" android:spinnerMode="dropdown"/>
        </LinearLayout>
        <TextView android:textColor="#423e3e" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15sp" android:layout_marginTop="10sp" android:layout_marginBottom="8sp" android:text="@string/teachResearch_section"/>
        <Button android:textSize="20sp" android:textStyle="bold" android:textColor="#363839" android:gravity="center_vertical" android:background="@color/white" android:paddingLeft="15sp" android:layout_width="match_parent" android:layout_height="70sp" android:text="@string/myJoin" android:drawableRight="@drawable/next_page" android:onClick="go_to_myJoin_section"/>
        <Button android:textSize="20sp" android:textStyle="bold" android:textColor="#363839" android:gravity="center_vertical" android:background="@color/white" android:paddingLeft="15sp" android:layout_width="match_parent" android:layout_height="70sp" android:layout_marginTop="8sp" android:text="@string/myCreate" android:drawableRight="@drawable/next_page" android:onClick="go_to_myCreate_section"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
